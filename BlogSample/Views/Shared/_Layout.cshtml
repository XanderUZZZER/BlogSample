<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/styles.css")
    @Scripts.Render("~/Scripts/scripts.js")

</head>
<body>
    <header>
        <div class="content">
            <h2 class="left">Blog sample</h2>
            <img src="~/Content/Imgs/Logo.jpg" class="right logo" alt="logo lies here" />
            <div class="clearfix"></div>
        </div>
    </header>
    <div class="content">
        <nav class="right-sidebar right">
            <ul>
                <li><a href="~/Home/Index">Home</a></li>
                <li><a href="~/GuestBook/Feedback">Guest Book</a></li>
                <li><a href="">Questionnaire</a></li>
            </ul>
        </nav>
        <div class="main-body">
            @RenderBody()
        </div>
        <div class="clearfix"></div>
    </div>
    <footer>
        <div class="content">
            <h2 class="left">&copy Copyright</h2>
            <div class="clearfix"></div>
        </div>
    </footer>
    <button onclick="topFunction()" id="topBtn" title="Go to top">Back to top</button>
</body>
</html>
